datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model Post {
  id          String    @id @default(uuid()) @postgresql.Uuid
  title       String    @default("")
  slug        String    @default("")
  status      String?   @default("draft")
  content     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author") @postgresql.Uuid
  tags        Tag[]     @relation("Post_tags")
  company     Company?  @relation("Company_posts")
  reviews     Review[]  @relation("Post_reviews")

  @@index([authorId])
}

model Tag {
  id    String @id @default(uuid()) @postgresql.Uuid
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Company {
  id             String  @id @default(uuid()) @postgresql.Uuid
  name           String  @default("")
  description    String  @default("")
  website        String  @default("")
  twitter        String  @default("")
  email          String  @unique @default("")
  logo_filesize  Int?
  logo_extension String?
  logo_width     Int?
  logo_height    Int?
  logo_mode      String?
  logo_id        String?
  posts          Post?   @relation("Company_posts", fields: [postsId], references: [id])
  postsId        String? @unique @map("posts") @postgresql.Uuid
}

model Review {
  id              String  @id @default(uuid()) @postgresql.Uuid
  title           String  @default("")
  content         Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  grinder         Float?
  coffee          Float?
  elapseTime      Float?
  volume          Float?
  media_filesize  Int?
  media_extension String?
  media_width     Int?
  media_height    Int?
  media_mode      String?
  media_id        String?
  posts           Post[]  @relation("Post_reviews")
}